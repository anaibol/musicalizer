//.control

//colResizable
.grip
  width 0 !important

.resizable
  table-layout fixed

.resizable td, .resizable th
  overflow hidden
  padding-left 0!important
  padding-right 0!important

.grips
  height 0px
  width 0 !important
  position relative

.grip 
  margin-left -5px
  position absolute
  z-index 5

.grip .resizable
  position absolute
  opacity 0
  width 10px
  height 100%
  top 0px

.lastGrip
  position absolute
  width 1px

.results
  .tbody
    min-height inherit

//border-right 2px solid red

//.playlist

.table-striped tbody tr:nth-child(odd) td, .table-striped tbody tr:nth-child(odd) th
  background none

.table-striped tbody tr:nth-child(odd)
  background-color #2e3236

.table
  counter-reset line-number

  -webkit-user-select none
  -moz-user-select none
  -o-user-select none
  user-select none

  cursor default

  overflow-y overlay

  margin 0

th, td
  border-right 1px solid grey

.tbody, .thead
  .number   
    text-align center

.tbody
  display block

  td.number:before
      content counter(line-number)
      counter-increment line-number

  thead
    th
      padding 0

  tbody
    tr
      display table-row
      width 100%

    .dragging
      td
        background-color red
        cursor move

    .selected
      background-color yellow !important
      color black

    tr:hover
      background-color white !important

      -moz-transition background-color .3s ease-in
      -webkit-transition background-color .3s ease-in
      transition background-color .3s ease-in

      color grey

    .selected:hover
      background-color green !important
      color violet


.placeholder
  //background white
  float left
  clear both
  margin-bottom 0

.placeholder span
  position absolute
  padding 5px
  margin-left 3px
  color #999

.placeholder input, .placeholder textarea
  position relative
  margin 0
  border-width 1px
  padding 6px
  background transparent
  font inherit

