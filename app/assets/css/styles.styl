.fluid 
  flex 1

.grid
  display -moz-box
  display -webkit-box
  display box

.btn
  background-image linear-gradient(top, #52575C, #3A3E41)
  background-image -webkit-linear-gradient(top, #52575C, #3A3E41)

body
  overflow hidden

header
  position fixed

  .bg
    position absolute
    height 100%
    background-image linear-gradient(top, #52575C, #3A3E41)
    background-image -webkit-linear-gradient(top, #52575C, #3A3E41)
    opacity: 0.5

  .content
    padding 5px

    .form-search, .input-append
      margin 0
      text-align right

.wrapper
  margin-top 38px
  min-height 100%
